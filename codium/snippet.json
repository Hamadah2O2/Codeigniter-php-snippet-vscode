{
	"Php Echo": {
		"prefix": "phpp",
		"body": [
			"<?= $1 ?>"
		],
		"description": "Php echo"
	}

	"CI Views Extend": {
		"prefix": "ciextend",
		"body": [
			"<?= \\$this->extend(\"$1\") ?>"
		],
		"description": "extend an views"
	}

	"CI Section": {
		"prefix": "cisection",
		"body": [
			"<?= \\$this->section('$1') ?>",
			"$2",
			"<?= \\$this->endSection() ?>"
		],
		"description": "set view section"
	}

	"CI render section": {
		"prefix": "cirendersec",
		"body": [
			"<?= \\$this->renderSection('$1') ?>"
		],
		"description": "render view section"
	}

	"this go": {
		"prefix": "phpt",
		"body": [
			"<?= \\$this->$1 ?>"
		],
		"description": "go $this->"
	}
}
